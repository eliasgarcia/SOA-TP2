<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="354dp"
        android:layout_height="275dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="349dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:text="HISTORIAL"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLimpiarHistorial"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Limpiar"
            android:textColor="#E53935"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="349dp"
        android:layout_height="82dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="BEBIDA"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblBebidaNombre"
                android:layout_width="177dp"
                android:layout_height="19dp"
                android:layout_marginLeft="20sp"
                android:text="Nombre: -" />

            <TextView
                android:id="@+id/lblBebidaDistancia"
                android:layout_width="177dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20sp"
                android:text="Distancia: -" />

            <TextView
                android:id="@+id/lblTiempoRestanteBebida"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:text="Sonará en:"
                android:textColor="#E53935" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnEditarBebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/ic_action_editar" />

        <ImageButton
            android:id="@+id/btnEliminarBebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="18sp"
            app:srcCompat="@drawable/ic_action_eliminar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMedicamento"
        android:layout_width="353dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="252dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEDICAMENTO"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblMedicamentoNombre"
                android:layout_width="181dp"
                android:layout_height="18dp"
                android:layout_marginLeft="20sp"
                android:text="Nombre: -" />

            <TextView
                android:id="@+id/lblMedicamentoDistancia"
                android:layout_width="180dp"
                android:layout_height="18dp"
                android:layout_marginLeft="20sp"
                android:text="Distancia: -" />

            <TextView
                android:id="@+id/lblTiempoRestanteMedicamento"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:text="Sonará en:"
                android:textColor="#E53935" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnEditarMedicamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18sp"
            app:srcCompat="@drawable/ic_action_editar" />

        <ImageButton
            android:id="@+id/btnEliminarMedicamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="18sp"
            app:srcCompat="@drawable/ic_action_eliminar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>